<div class="col-lg-6">
  <h1>Recover password</h1>
   <%= form_tag password_resets_path, method: :post do %>

      <div class="form-group">
        <div class="col-lg-8">
          <%= email_field_tag :email, nil, placeholder: 'email' %>
        </div>
      </div>
      
      <br><br>
      
      <div class="form-group">
        <div class="col-lg-10">
          <%= submit_tag 'Recover', class: 'btn btn-default' %>
        </div>
      </div>
      
  <% end %>   
</div>
    