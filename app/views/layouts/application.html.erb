<!DOCTYPE html>
<html>
  <head>
    <title>GoogleBooks</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <nav class='navbar navbar-default'>
      <div class='container-fluid'>
        <div class='navbar-header'>
            <%= link_to 'Home', :root, class: "navbar-brand" %>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
            <% if current_user %>
              <%= link_to current_user.username, current_user, class: "navbar-brand" %>
              <%= link_to 'Log Out', session_path(current_user), method: :delete, class: "navbar-brand" %>
            <% else %>
              <%= link_to 'Sing Up', :new_user, class: "navbar-brand" %>
              <%= link_to 'Sing In', :new_session, class: "navbar-brand" %>
            <% end %>
          </ul>
        </div> 
      </div>
    </nav>

    <strong><%= notice %></strong> 
    <strong><%= flash[:error] unless flash.empty? %></strong>

    <%= yield %>

  </body>
</html>
