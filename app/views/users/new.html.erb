<div id="background-image" style="background: url(https://dl-web.dropbox.com/get/fondos/photo_2015-05-20_02-19-38.jpg?_subject_uid=238475142&w=AADMrCbg-3Y0M0rOj9iE8upWJ8tWsbjnoDhrXwGSxEHpXA) no-repeat center center; background-size: cover; -webkit-background-size: cover;-moz-background-size: cover; -o-background-size: cover;"></div> 
<div id="background-overlay"></div>
<div class="main-content" style="position:relative;">
  <div class="container">
    <%= form_for @user, html: { class: "form-signin" } do |f| %>
      <% if @user.errors.any? %>
        <div class="alert alert-info alert-dismissable">
          <a class="panel-close close" data-dismiss="alert">Ã—</a> 
          <i class="fa fa-coffee"></i>
          <ul>
            <% for message in @user.errors.full_messages %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <h2 class="form-signin-heading">Registra tus datos</h2>
      
      <%= f.label :username, class: "sr-only" %>
      <%= f.text_field :username, class: "form-control", placeholder: "Username" %>
    
      <%= f.label :email, class: "sr-only" %>
      <%= f.email_field :email, class: "form-control", placeholder: "Email" %>

      <%= f.label :password, class: "sr-only" %>
      <%= f.password_field :password, class: "form-control", placeholder: "Password" %>

      <%= f.label :password_confirmation, class: "sr-only" %>
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password Confirmation" %>
       

      <%= f.submit "Registrarme", class: 'btn btn-lg btn-primary btn-block' %>
    <% end %>
  </div>
</div>