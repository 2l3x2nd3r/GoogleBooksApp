<div class="col-lg-6">
  <div class="well bs-component">
    <%= form_for current_user, html: { class: "edit_user form-horizontal" } do |f| %>
      <fieldset>
        <legend>Edit</legend>
        <% if current_user.errors.any? %>
          <div class="error_messages">
            <h2>Form is invalid</h2>
            <ul>
              <% for message in current_user.errors.full_messages %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :username, class: "col-lg-2 control-label" %>
          <div class="col-lg-8">
            <%= f.text_field :username, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :email, class: "col-lg-2 control-label" %>
          <div class="col-lg-8">
            <%= f.text_field :email, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label "First name", class: "col-lg-2 control-label" %>
          <div class="col-lg-8">
            <%= f.text_field :firstname, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label "Last name", class: "col-lg-2 control-label" %>
          <div class="col-lg-8">
            <%= f.text_field :lastname, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :biography, class: "col-lg-2 control-label" %>
          <div class="col-lg-8">
            <%= f.text_area :biography, size: "19x10", class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :location, class: "col-lg-2 control-label" %>
          <div class="col-lg-8">
            <%= f.text_field :location, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password, class: "col-lg-2 control-label" %>
          <div class="col-lg-8">
            <%= f.password_field :password, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, class: "col-lg-2 control-label" %>
          <div class="col-lg-8">
            <%= f.password_field :password_confirmation, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-lg-8 col-lg-offset-2">
            <%= f.submit "Edit Accont", class: 'btn btn-default' %>
          </div>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>