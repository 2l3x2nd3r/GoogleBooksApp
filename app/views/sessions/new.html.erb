<div class="col-lg-6">
  <h1>Authentication</h1>

  <br>

  <%= form_tag sessions_path do %>

    <br>

    <div class="form-group">
      <%= label_tag :email, "Email", class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= text_field_tag :email, params[:email] %>
      </div>
    </div>

    <br>

    <div class="form-group">
      <%= label_tag :password, "Password", class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= password_field_tag :password %>
      </div>
    </div>

    <br>

    <div class="form-group">
      <div class="col-lg-10">
        <div class="checkbox">
          <label>
            <%= check_box_tag :remember_me, 1, params[:remember_me] %>
            Remember me
          </label>
        </div>
      </div>
    </div>

    <br>

    <div class="form-group">
      <div class="col-lg-10">
        <%= submit_tag "Log in", class: 'btn btn-default' %>
      </div>
    </div>

  <% end %>
  <br> <br>
  <div class="form-group">
    <div class="col-lg-10">
      <%= link_to 'Reset password', new_password_reset_path, class: 'btn btn-default' %>
    </div>
  </div>
  
</div>